{
  "name": "shqipzone-lyrics",
  "version": "1.0.0",
  "description": "Albanian lyrics translation platform - ShqipZone",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
